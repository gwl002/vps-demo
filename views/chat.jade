extends layout
append css
	link(rel="stylesheet", href="/css/sco.message.css")
block main
	div.container
		div.row#nickWrap
			div.col-md-6
				h3 Please enter a nickname
				p.nickError.alert-danger
				form.form-inline#nickForm
					div.form-group
						input.form-control(type="text",id="nickName")
						button.btn.btn-default(type="submit",style="margin-left:20px") send
		div.row#contentWrap(style="margin-top:50px;display:none")
			div#chatWrap.col-md-8
				div.panel.panel-primary
					div.panel-body
						div#chat(style="height:500px;overflow-y:auto")
					div.panel-footer
						form#send-message.form-inline
							div.form-group
								input.form-control(type="text",id="message",style="width:450px;margin-right:20px")
								button.btn.btn-success(type="submit") Send
			div.col-md-4
				div.panel.panel-primary
					div.panel-heading
						span.glyphicon.glyphicon-user
						|&nbsp;在线用户
					div.panel-body(style="height:500px;")
						ul.list-group#users
								

append js
	script(src="/js/sco.message.js")
	script(src="/js/socket.io.js")
	script(src="/js/main.js")
